<% provide :title, t(".users") %>
<h1><%= t ".users" %></h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.gravatar.size2 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        <%= link_to t(".delete"), user, method: :delete,
          data: {confirm: t(".sure")}, id: "delete_method" %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
