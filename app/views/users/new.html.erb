<% provide :title, t(".signup") %>
<h1><%= t ".signup" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: t(".name") %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: t(".mail") %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: t(".pass") %>

      <%= f.label :password_confirmation, t(".confirm") %>
      <%= f.password_field :password_confirmation, placeholder: t(".confirm_pass") %>

      <%= f.submit t ".create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
